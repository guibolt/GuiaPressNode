<%- include('../../partials/header'); %> <%- include('../../partials/navbar');
%>

<div class="container">
  <hr />
  <h2>Categorias</h2>
  <a href="/admin/categories/new" class="btn btn-success"
    >Criar nova categoria</a
  >
  <hr />
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th>Titulo</th>
        <th>Slug</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(category => { %>
      <tr>
        <th><%=category.id%></th>
        <th><%=category.title%></th>
        <th><%=category.slug%></th>
        <th>Ações</th>
        <th>
          <a
            href="/admin/categories/edit/<%= category.id %>"
            class="btn btn-warning"
            >Editar</a
          >

          <form
            method="POST"
            action="/categories/delete"
            style="display: inline"
            onsubmit="confirmarDelete(event,this)"
          >
            <input type="hidden" name="id" value="<%= category.id %>" />
            <button type="submit" class="btn btn-danger">Deletar</button>
          </form>
        </th>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../../partials/header'); %>

<script>
  const confirmarDelete = (event, form) => {
    event.preventDefault();
    let decision = confirm("Quer deletar essa porra?");

    if (decision) form.submit();
  };
</script>
